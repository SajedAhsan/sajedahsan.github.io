#include <bits/stdc++.h>
#define rep(i, a, b) for (int i=a; i<b; i++) 
using namespace std;
long double pi = 3.141592653589793;
long double total = 0;
long double ans = 0;
long double n,k;
long double eps = 1e-4;
bool tf(long double c){
   long double j = c*(k+1);
   return j<total;
}
int main(){
    long long int n;
    cin >> n;
    long long int sum = (n*(n+1))/2;
    long long int mid = sum/2;
    long long int temps = 0;
    vector<int> s1;
    vector<int> s2;
    if(sum%2){
        cout << "NO" << endl;
    }else{
        cout << "YES" << endl;
        for(int i=n;i>=1;i--){
            temps+=i;
            if(temps>mid){
                s1.push_back(i);
                temps-=i;
            }else{
                s2.push_back(i);
                
            }
        }
    }
    cout << s1.size() << endl;
    for(int i=0;i<s1.size();i++){
        cout << s1[i] << " ";
    }
    cout << endl;
    cout << s2.size() << endl;
    for(int i=0;i<s2.size();i++){
        cout << s2[i] << " ";
    }


       
}
